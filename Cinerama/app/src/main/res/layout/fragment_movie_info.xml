<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.MovieInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/image_broke"
            app:layout_constraintBottom_toTopOf="@+id/h1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="1000dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:text="Sinopsis"
            app:layout_constraintBottom_toTopOf="@+id/h2"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h1"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="1000dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:text="Director"
            app:layout_constraintBottom_toTopOf="@+id/h4"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h3"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="1000dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:text="Cast"
            app:layout_constraintBottom_toTopOf="@+id/h6"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h5"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="1000dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:text="Idiomas"
            app:layout_constraintBottom_toTopOf="@+id/h8"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h7"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/movie_plot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="trama de la película"
            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/h3"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h2"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/movie_director"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Director de la Película"
            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/h5"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h4"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/movie_cast"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Cast de la película"
            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/h7"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h6"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:id="@+id/movie_idiomas"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Idiomas"
            android:autoSizeMaxTextSize="15dp"
            android:autoSizeMinTextSize="1dp"
            android:autoSizeTextType="uniform"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/h9"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintTop_toTopOf="@+id/h8"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>