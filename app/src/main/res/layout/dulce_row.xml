<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <ImageView
                android:id="@+id/comida_foto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/h2"
                app:layout_constraintEnd_toStartOf="@+id/v2"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="@+id/v1"
                app:layout_constraintTop_toTopOf="@+id/h5"
                app:srcCompat="@drawable/image_broke"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/comida_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Image don't Load"
                android:textAlignment="center"
                android:autoSizeMaxTextSize="1000dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/h3"
                app:layout_constraintEnd_toStartOf="@+id/v2"
                app:layout_constraintStart_toStartOf="@+id/v1"
                app:layout_constraintTop_toTopOf="@+id/h1"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <TextView
                android:id="@+id/comida_descripcion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="DescripciÃ³n comida."
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/h5"
                app:layout_constraintEnd_toStartOf="@+id/v3"
                app:layout_constraintStart_toStartOf="@+id/v1"
                app:layout_constraintTop_toBottomOf="@+id/comida_title"
                tools:ignore="HardcodedText,UnusedAttribute" />

            <TextView
                android:id="@+id/comida_precio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Precio"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeMinTextSize="1dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/h5"
                app:layout_constraintEnd_toStartOf="@+id/v2"
                app:layout_constraintStart_toStartOf="@+id/v3"
                app:layout_constraintTop_toTopOf="@+id/h3"
                tools:ignore="HardcodedText,UnusedAttribute" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>